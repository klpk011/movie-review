<div class="col-md-12">
<h2 class="text-center"> 我发表过的电影评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 评论内容 </th>
        <th> 电影名称 </th>
        <th> 发表时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td> # </td>
          <td> <%= simple_format(review.content) %> </td>
          <td> <%= review.group.title %> </td>
          <td> <%= review.updated_at %> </td>
          <td> <%= link_to('Edit', edit_group_review_path(review.group, review), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', group_review_path(review.group, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
